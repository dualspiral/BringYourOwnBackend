{% macro featuredDownload(id, title, blurb) %}
<div class="featured-download">
    <div class="platform-logo"><h2>{{ title | safe }}</h2></div>
    <div>
        {{ blurb | safe }}
    </div>
    <div>
        <button class="btn btn-primary" data-download-id="{{ id }}">Downloads</button>
    </div>
</div>
{% endmacro %}

{% macro otherDownload(id, title) %}
<div class="row other-download">
    <div class="platform-logo col-md-10"><h3>{{ title | safe }}</h3></div>
    <div class="col-md-2">
        <button class="btn btn-primary" data-download-id="{{ id }}">Downloads</button>
    </div>
</div>
{% endmacro %}